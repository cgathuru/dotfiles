# Set the default alues for all folowing accounts
defaults
auth		on
port		587
tls		on
tls_starttls	on
tls_trust_file	/etc/ssl/certs/ca-certificates.crt
logfile		~/.msmtp.log

# Gmail
account gmail
host smtp.gmail.com
from charlesgathuru@gmail.com
user	charlesgathuru
#tls_fingerprint CB:24:88:2B:26:6A:34:E4:6F:EF:45:2E:6E:7C:4C:5F:4E:BD:8F:88

# McGill
account mcgill
host smtp.office365.com
from charles.gathuru@mail.mcgill.ca
user charles.gathuru@mail.mcgill.ca
#tls_fingerprint A0:47:6C:0C:30:34:7A:7A:15:9A:9F:F5:0B:CD:BC:84:BD:D3:D1:66

# Set a default account
account default	: gmail
